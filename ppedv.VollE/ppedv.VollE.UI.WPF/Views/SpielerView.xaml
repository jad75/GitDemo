<UserControl x:Class="ppedv.VollE.UI.WPF.Views.SpielerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ppedv.VollE.UI.WPF.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel>
        <WrapPanel DockPanel.Dock="Top" Margin="8">
            <Button>Speichern</Button>
            <Button>Neu</Button>
            <Button>Löschen</Button>
            <Button>Demo daten</Button>
        </WrapPanel>
        <DataGrid Width="200" DockPanel.Dock="Left"/>
        <StackPanel Margin="8,0">
            <Label>Name</Label>
            <TextBox/>
            <Label>GebDatum</Label>
            <DatePicker/>
            <Label>Geschlecht</Label>
            <ComboBox/>
            <Label>Händigkeit</Label>
            <CheckBox>Rechts</CheckBox>
            <Label>Mannschaftmitglied</Label>
            <ListBox Height="60"/>
        </StackPanel>
    </DockPanel>
</UserControl>
